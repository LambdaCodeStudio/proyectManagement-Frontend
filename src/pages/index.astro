---
// Verificar si el usuario está autenticado y redirigir adecuadamente
const isAuthenticated = false; // Esto debería venir de una comprobación real de token

// Determinar a dónde redirigir basado en la autenticación
const redirectTo = isAuthenticated ? '/dashboard' : '/login';
---

<meta http-equiv="refresh" content={`0;url=${redirectTo}`} />

<script>
  // También redirigir mediante JavaScript por compatibilidad
  const isAuthenticated = document.cookie.includes('auth='); // Ejemplo simple
  const redirectTo = isAuthenticated ? '/dashboard' : '/login';
  window.location.href = redirectTo;
</script>