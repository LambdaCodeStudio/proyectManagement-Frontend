---
import Layout from '../../layouts/main/Layout.astro';
import { ProjectForm } from '../../components/ProjectForm';

// Obtener posibles parámetros de consulta para edición
const { searchParams } = Astro.url;
const id = searchParams.get('id');
---

<Layout title={id ? "Editar Proyecto" : "Nuevo Proyecto"}>
  <!-- Ahora solo necesitamos pasar id si estamos en modo edición -->
  <ProjectForm client:load id={id || undefined} />
</Layout>