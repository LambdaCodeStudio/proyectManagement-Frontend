---
import Layout from '../layouts/main/Layout.astro';
import { RegisterForm } from '../components/auth/RegisterForm';
---

<Layout title="Registro" showNavbar={false}>
  <main class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div class="text-center">
        <h1 class="text-3xl font-extrabold text-gray-900">GestorPro</h1>
        <h2 class="mt-6 text-xl font-bold text-gray-900">Crear Cuenta</h2>
        <p class="mt-2 text-sm text-gray-600">
          Registra tus datos para comenzar a utilizar el sistema
        </p>
      </div>
      <RegisterForm client:load />
    </div>
  </main>
</Layout>